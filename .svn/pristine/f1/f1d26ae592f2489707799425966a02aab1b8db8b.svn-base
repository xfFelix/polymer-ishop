@function px2rem($px) {
	$rem:16px;
	@return ($px / $rem) + rem;
}
		html,body{
    		margin: 0;
    		padding: 0;
    	}
        .refund{
            .loading{
                text-align: center;
                position: absolute;
                left: 50%;
                top: 50%;
                width: 50px;
                height: 50px;
                margin-left: -30px;
                margin-top: -20px;
            }
        }
    	.refund_container{
    		width: 100%;
    		height: 100%;
    		border: px2rem(1px) solid #DDDDDD;
            background: #FFFFFF;
    		display: flex;
    		flex-flow: row;
    	}
    	.left_icon{
    		display: flex;
    		flex-flow: column;
    		width: px2rem(230px);
    		height: px2rem(239px);
    	}
    	.left_icon img{
    		margin-left: px2rem(57px);
    		margin-top: px2rem(41px);
    		width: px2rem(108px);
    		height: px2rem(108px);
    	}
    	.left_title{
    		margin-left: px2rem(61px);
    		margin-bottom: px2rem(54px);
    		width: px2rem(94px);
    		height: px2rem(28px);
    		word-break: keep-all;
    		font-family: PingFangTC-Light sans-serif;
			font-size: px2rem(20px);
			color: #474747;
			text-align: center;
			letter-spacing: 0;
    	}
    	.right_content{
    		width: px2rem(370px);
    		height: px2rem(239px);
    	}
    	.right_content .content_title{
    		width: px2rem(253px);
    		height: px2rem(25px);
    	}
    	.right_content .content_title p{
    		font-size: px2rem(18px);
    		font-family: PingFangTC-Semibold sans-serif;
    		color: #474747;
    		letter-spacing: 0;
    	}
    	.right_content .content_text{
    		min-height: px2rem(20px);
    		max-height: px2rem(110px);
    		overflow: hidden;
    		text-overflow: ellipsis;
    	}
    	.right_content .content_text p{
    		font-family: PingFangTC-Light sans-serif;
			font-size: px2rem(14px);
			color: #474747;
			letter-spacing: 0;
    	}
    	.right_content .content_button{
            position: absolute;
            bottom: px2rem(20px);
    		width: px2rem(145px);
    		height: px2rem(40px);
    		background-color: #ecdfde;
            display: flex;
    	}
    	.right_content .content_button div{
            margin: auto;
    		width: px2rem(103.8px);
    		height: px2rem(22px);
    		font-family: PingFangTC-Medium sans-serif;
			font-size: px2rem(16px);
			color: #9B9B9B;
			letter-spacing: 0;
			word-break: keep-all;
            line-height: px2rem(22px);
            text-align: center;
    	}
        .container_car,.container_header,.container_price{
            display: none;
        }
        @media screen and (min-width: 360px) and (max-width:413px){
            .refund{
                .refund_container{
                    flex-direction: column;
                    .container_header{
                        display: flex;
                        flex-direction: row;
                        order:1;
                        background: #D30026;
                        box-shadow: 0 0 4px 0 rgba(0,0,0,0.12), 0 4px 4px 0 rgba(0,0,0,0.24);
                        height: 55px;
                        .header_icon{
                            position: absolute;
                            width: 19px;
                            height: 22px;
                            top: 17px;
                            left: 22px;
                        }
                        .header_title{
                            margin: auto;
                            font-family: PingFangTC-Medium;
                            font-size: 20px;
                            color: #FFFFFF;
                        }
                    }
                    .container_car{
                        display: block;
                        order: 2;
                        height: 130px;
                        border-bottom: 1px solid #d7c6c6;
                        display: flex;
                        flex-flow: row;
                        .car_left{
                            flex:2;
                            display: flex;
                            .left_icon{
                                background: #EEEEEE;
                                margin: auto;
                                width: 108px;
                                height: 91px;
                            }
                        }
                        .car_right{
                            flex:3;
                            display: flex;
                            flex-flow: column;
                            align-items: flex-start;
                            justify-content: center;
                            .right_title{
                                font-family: PingFangTC-Medium;
                                font-weight: bold;
                                font-size: 15px;
                                color: #4A4444;
                                letter-spacing: 0;
                                margin-bottom: 10px;
                            }
                            .right_txt{
                                font-family: PingFangTC-Light;
                                font-size: 14px;
                                color: #4A4A4A;
                                letter-spacing: 0;
                            }
                        }
                    }
                    .container_price{
                        order: 3;
                        display: flex;
                        justify-content: center;
                        align-items: center;
                        margin-top: 10px;
                        .price_text{
                            font-family: PingFangTC-Light;
                            font-size: 18px;
                            color: #4A4A4A;
                            letter-spacing: 0;
                            strong{
                                color: red;
                                font-size: 44px;
                                font-weight: bold;
                            }
                        }
                    }
                    .left_icon{
                        order:4;
                        width: 100%;
                        height: auto;
                        justify-content: center;
                        align-content: center;
                        margin: 50px auto;
                        img{
                            margin:auto;
                            width: 145px;
                            height: 130px;
                        }
                        .left_title{
                            margin: auto;
                        }
                    }
                    .right_content{
                        order:5;
                        height: auto;
                        margin-top: 20px;
                        margin-bottom: 50px;
                        .content_title,.content_text{
                            display: none;
                        }
                        .content_button{
                            display: block;
                            margin: auto;
                            position: static;
                            width: auto;
                            height: auto;
                            background-color: #FFFFFF;
                            div{
                                margin: auto;
                                display: flex;
                                justify-content: center;
                                align-items: center;
                                height: 100%;
                                background: #EEEEEE;
                                border-radius: 4px;
                                width: 194px;
                                height: 50px;
                            }
                        }
                    }
                }
            }
        }
        @media screen and (min-width: 360px) and (max-width:374px){
            .refund .refund_container .container_price{
                margin-top: 0px;
            }
        }
        @media screen and (min-height: 812px) and (min-width:375px){
            .refund .refund_container .right_content .content_button div{
                margin-bottom: 142px;
            }
        }