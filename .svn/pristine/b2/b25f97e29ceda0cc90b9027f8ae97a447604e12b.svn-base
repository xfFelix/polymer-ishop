<dom-module id="lt-style">
  <template>
    <style>
      :host{
      font-family:microsoft yahei;
      }
      [hidden]{
        display: none!important;
      }
      *{
          user-select: none;
          font-family: sans-serif;
      }
      ul{
        list-style-type: none;
        margin:0;
        padding:0;
      }
      .f_l{
        float: left;
      }
      .f_r{
        float: right;
      }
      .fullscreen{
        width: 100%;
        height: 100%;
        left: 0;
        top:0;
        position: absolute;
      }
      .pageContainer{
        width:100%;
        margin:0 auto;
        /*padding:10px;*/
        max-width: 1080px;
      }
      .centerAll{
        display: flex;
        flex-flow: row nowrap;
        justify-content: center;
        align-items: center;
      }
      .inline{
        display: inline-block;
      }
      .main_content{
        width:1080px;
        height:auto;
        margin:0 auto ;
      }
      .row{
        width:100%;
        box-sizing: border-box;
        margin-bottom: var(--app-margin, 10px);
      }
      .row.col{
        display: flex;
        flex-flow: column wrap;
        justify-content: space-between;
      }

      .title{
        font-size:26px;
        font-weight:500;
      }

      .noData{
        color:#999999;
        font-size:13px;
      }
      .btn_icon{
        margin-right:8px;
      }
      @media screen and (min-width : 800px){
        :host {
          --app-card-width:25%;
        }
      }
      @media screen and (max-width : 800px) and (min-width : 600px){
        :host {
          --app-card-width:33.3%;
        }
      }
      @media screen and (max-width : 600px) and (min-width : 480px){
        :host {
          --app-card-width: 50%;
        }
      }
    </style>
  </template>
</dom-module>
