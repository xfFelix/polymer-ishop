<link rel="import" href="../../../bower_components/polymer/polymer-element.html" />

<dom-module id="lt-refund-wait">
	<template>
		<link rel="stylesheet" type="text/css" href="/src/lt-auto/css/refund-wait.css">
		<style>
			:host {
				display: block;
			}
		</style>
		<div class="refund">
		<div class="refund_container">
			<div class="container_header">
				<img class="header_icon" src="../../../images/arrow.png" on-click="goBack"></img>
				<p class="header_title">订单详情</p>
			</div>
			<div class="container_car">
				<div class="car_left">
					<img class="left_icon" src$={{data.defaultImgUrl}}></img>
				</div>
				<div class="car_right">
					<div class="right_title">{{data.vehicleBrandName}} | {{data.vehicleSeriesName}}(1)</div>
					<div class="right_txt">{{data.vehicleModelName}}    {{data.colorName}}色</div>
				</div>
			</div>
			<div class="container_price">
				<p class="price_text">退款申请已经传达<br/><strong>请等候商户审核</strong></p>
			</div>

			<div class="left_icon">
				<img src="../../../images/Bitmap.jpg">
			</div>
			<div class="right_content">
				<div class="content_title">
					<p>退款申请已经传达</p>
				</div>
				<div class="content_text">
					<p>请耐心等候商户审核</p>
					<p class="text_shoper">商户：{{suppliersName}}</p>
				</div>
				<div class="content_button">
					<div on-click="cancelPage" class="button_ok">了解</div>
					<div class="button_link" on-click="goSchedule">查看退款进度</div>
				</div>
			</div>
		</div>
		</div>
	</template>
	
	<script>
		class ltRefundWait extends Polymer.Element{
			static get is(){return "lt-refund-wait"}
			static get properties(){
				return {
					data : Object,
					suppliersName: String
				}
			}
			cancelPage(){
				this.dispatchEvent(new CustomEvent('refund-wait', {detail:{msg:"退款等待"}}));
			}
			goSchedule () {
				this.dispatchEvent(new CustomEvent('refund-schedule', {detail:{msg:"退款进度"}}));
			}
		}
		customElements.define(ltRefundWait.is,ltRefundWait)
	</script>
</dom-module>
