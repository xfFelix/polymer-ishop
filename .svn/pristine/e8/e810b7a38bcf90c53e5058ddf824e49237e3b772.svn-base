<link rel="import" href="../../../bower_components/polymer/polymer-element.html" />
<dom-module id="lt-choose-shop-page">
	<template>
		<style include="lt-style">
			:host {
				width: 100%;
				min-height: 500px;
				display: block;
				padding: 15px 25px;
				box-sizing: border-box;
				background: #fff;
				--border-style:1px solid #ddd;
			}
			.pageContainer{
				min-height: 500px;
			}
			.header{
				color: rgba(0,0,0,0.6);
				width: 100%;
			}
			.header span:last-child{
				color : #6abaff;
			}
			.order_box{
				margin-top: 20px;
			}
			.car_table table {
				width: 100%;
				border-collapse:collapse;
				margin: 0 auto;
				margin-top: 20px;
			}
			td .imgBox {
				width: 25%;
			}
			table tr td{
				border : 1px solid #ddd;
				padding: 10px;
				min-width: 120px;
    			text-align: center;
    			box-sizing: border-box;
			}
			table thead{
				background: #F5F5F5;
			}
			table tbody{
				background: #fff;
			}
			table tr td.detail_td{
				border-top: none;
				border-right: none;
				display: flex;
				align-items: center;
			}
			.dec{
				font-weight: 600;
				margin-left: 20px;
			}
			.brand {
			    display: inline-block;
			}
			.brand::after {
			    content: " | ";
			}
			.series {
			    display: inline-block;
			}
			.model {
			    display: block;
			    color: #999999;
			    font-weight: 300;
			    margin-top: 8px;
			}
			.price{
                font-size: 30px;
                color: red;
            }
            .price::before{
                content: "￥";
                font-size: 14px;
                color:#4A4A4A;
            }
            .price::after{
                content: "万";
                font-size: 14px;
                color:#4A4A4A;
            }
            .shop_box{
				margin-top: 20px;
				display: flex;
				justify-content: space-between;
				width: 100%;
				margin-bottom: 10px;
            }
            .shop_list{
            	width: 35%;
            }
			.shop_box ul li{
				padding: 15px;
			    border: var(--border-style);
			    display: flex;
			    align-items: center;
			    justify-content: flex-start;
			    /*justify-content: space-around;*/
			}
			.num{
				width: 20px;
			    height: 20px;
			    text-align: center;
			    background: #ffb800;
			    color: #fff;
			    border: 1px solid transparent;
			    border-radius: 10px;
			    align-self: flex-start;
			    position: relative;
			}
			.num::after{
				content: "";
				border-right: 8px solid transparent;
				border-left: 8px solid transparent;
				border-top: 10px solid #ffb800;
				position: absolute;
				bottom: -8px;
				right: 2px;
			}
			.distance{
				font-size: 5px;
				color: red;
			}
			.shop_detail{
				width: 75%;
				padding: 0 5px;
			}
			.shop_name{
				font-weight: 800;
				font-size: 18px;
			}
			.shop_address{
				font-weight: 300;
				font-size: 14px;
			}
			.choose_button{
				background: #f00;
				color: #fff;
				padding: 5px;
			}
			#mapContainer{
				width: 62%;
				height: 400px;
				align-self: flex-end;
			}
			.popContainer{
				/*min-height: 400px;*/
				padding: 5px;
				display: flex;
				flex-direction: column;
				align-items: flex-start;
			}
			.popContainer .buttons{
				margin-top: 10px;
				align-self: flex-end;
			}
			.popContainer .confirmText {
				font-size: 24px;
				font-weight: 500;
			}	
            @media screen and (max-width:620px){
            	:host{
            		padding: 10px;
            	}
            	table tr td.detail_td{
            		flex-direction: column;
            	}
            	td .imgBox ,td .dec{
            		width: 100%;
            		margin: 0;
            	}
            	.shop_box{
            		flex-direction: column;
            	}
            	.shop_box .shop_list{
            		width: 100%;
            	}
            	.shop_box #mapContainer{
            		width: 100%;
            		align-self: center;
            	}
            }
		</style>
		<div class="pageContainer">
			<div class="header">
				当前位置：<span>首页</span> > <span>我的订单</span> > <span>选择附近的车行</span> 
			</div>
			<div class="order_box">
				<div class="car_table" id="car_table">
					<table>
						<thead>
							<tr>
								<td>产品</td>
								<td>价格</td>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td class="detail_td">
									<div class="imgBox" style="background: url(../../../images/default_bg.jpg);">
										<img src$="{{shop_car_detail.defaultImgUrl}}" width="100%">
									</div>
									<div class="dec">
										<span class="brand">{{shop_car_detail.vehicleBrandName}}</span>
										<span class="series">{{shop_car_detail.vehicleSeriesName}}</span>
										<span class="model">{{shop_car_detail.vehicleModelName}}</span>
									</div>	
								</td>
								<td>
									<div class="price">{{shop_car_detail.totalAmount}}</div>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
			<div class="shop_box">
				<div class="shop_list">
					<ul>
						<template is="dom-repeat" items="{{shopList}}">
							<li>
								<div class="num">
									{{couIndex(index)}}
								</div>
								<em class="distance">
									距离
								</em>
								<div class="shop_detail">
									<div class="shop_name">{{item.shopName}}</div>
									<div class="shop_address">{{item.shopAddress}}</div>
								</div>
								<div class="choose_button" on-click="_chooseShop">
									選擇
								</div>
							</li>
						</template>
					</ul>
				</div>
				<div id="mapContainer">
					<iframe id="iframe" src="/src/lt-auto/map.html" frameborder="0" width="100%" height="100%"></iframe>
				</div>
			</div>
		</div>
		<lt-pop opened="{{confirmPopBoo}}">
			<div class="popContainer">
				<div class="confirmText">
					是否选择该店铺?
				</div>
				<div class="buttons">
					<lt-button on-click="_concelSelect">取消</lt-button>
					<lt-button on-click="_confirmShop">确定</lt-button>
				</div>
			</div>
		</lt-pop>
		<!-- 获取购物车列表 -->
		<iron-ajax
		    id="getShopList"
		    method="POST"
		    headers='{{header}}'
		    body = "{}"
		    url="{{_calUserUrl('order/shopping/getShopList')}}"
		    Content-Type="application/json"
		    handle-as="json"
		    on-response="_responShopList">
		</iron-ajax>
		<!-- 选择具体店 -->
		<iron-ajax
		    id="saveSalesArea"
		    method="POST"
		    headers='{{header}}'
		    url="{{_calUserUrl('order/shopping/saveSalesArea')}}"
		    Content-Type="application/json"
		    handle-as="json"
		    on-response="_responSaveArea">
		</iron-ajax>
	</template>
	<script>
		class ltChooseShopPage extends ltMixin(Polymer.Element){
			static get is(){return "lt-choose-shop-page"}
			static get properties(){
				return {
					shopList : Array,
					confirmPopBoo:{
						type :Boolean,
						value : false
					}
				}
			}
			static get observers (){
				return [
				]
			}

			// 选店
			_chooseShop(e){
				var shop = e.model.__data.item;
				this.selectedShop = shop;
				this.confirmPopBoo = true;
			}
			_concelSelect(){
				this.confirmPopBoo = false;
			}
			_confirmShop(){
				this.$.saveSalesArea.body = {
					datas : [
						{
							tabSysShopId : this.selectedShop.tabSysShopId,
							vehicleSalesUid : this.shop_car_detail.vehicleSalesUid
						}
					]
				}
				this.$.saveSalesArea.generateRequest();
			}
			_responSaveArea(e){
				if(e.detail.response.status == 1){
					this.confirmPopBoo = false;
					this.dispatchEvent(new CustomEvent('confirm', {detail:{msg:"保存成功"} ,bubbles: true, composed: true}));
					location.hash = "#/order";
				}
			}
			couIndex(ind){
				return ++ind 
			}
			// 店列表
			_responShopList(e){
				this.shopList = e.detail.response.shopList || [];
				// 获取所有店location；
				var arr = [];
				this.shopList.forEach((item,ind)=>{
					arr.push({
						ind : ind+1,
						x : item.locationX,
						y : item.locationY
					})
				})
				var iWindow = this.$.iframe.contentWindow;
				// 调用iframe 方法;
				iWindow.addEventListener('load',iWindow.setShop(arr))
			}
			ready(){
				super.ready();
			}
			getDates () {
				var _this = this
				window.addEventListener('message', function(e) {
					let longitude = e.data[0]
					let latitude = e.data[1]
					_this.$.getShopList.body = {
						'longitude': longitude,
						'latitude': latitude
					}
             		_this.$.getShopList.generateRequest();
				})
			}
			show(){
             	this.style.display= 'block';
             	// get cart req,if login
             	if(header['X-CustomToken']){
             		// var data = this.$.iframe.contentWindow;
             		// console.log(data)
             		var iWindow = this.$.iframe.contentWindow;
					iWindow.addEventListener('load',this.getDates())
             		this.shop_car_detail = JSON.parse(localStorage.getItem('shop_car_detail'));
             	}else{
             		this.dispatchEvent(new CustomEvent('confirm', {detail:{msg:"请先登录!"} ,bubbles: true, composed: true}));
             		setTimeout(function(){
             			location.hash = "#/home"
             		},2000)
             	}
            }
            hide(){
             	this.dispatchEvent(new CustomEvent('hide',{}));
				this.style.display= 'none';
            }

		}
		customElements.define(ltChooseShopPage.is,ltChooseShopPage)
	</script>
</dom-module>