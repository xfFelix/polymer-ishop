<link rel="import" href="../../../bower_components/polymer/polymer-element.html" />
<link rel="import" href="../../../bower_components/iron-ajax/iron-ajax.html" />
<dom-module id="lt-compare-card">
	<template>
		<style>
			:host {
				display: block;
				margin-right: 1%;
			}
			.container {
				width: 250px;
				background: #fff;
				position: relative;
				padding: 5px;
				border-radius: 5px;
				box-sizing: border-box;
			}
			.brand {
			    display: inline-block;
			}
			.brand::after {
			    content: " | ";
			}
			.series {
			    display: inline-block;
			}
			.model {
			    display: inline-block;
			    color: #999999;
			    font-weight: 300;
			    margin-top: 8px;
			}
			.price{
                font-size: 30px;
                color: red;
            }
			.price::before{
                content: "￥";
                font-size: 14px;
                color:#4A4A4A;
            }
            .price::after{
                content: "万";
                font-size: 14px;
                color:#4A4A4A;
            }
            .top_card{
            	display: flex;
            	flex-direction: column;
            	align-items: center;
            	padding-top: 10px;
            	border: 1px solid #DDDDDD;
            	height: 280px;
            }
            .top_card .img{
            	width: 100%;
            	height: 140px;
            }
            .img img{
            	width: 100%;
            	height: 100%;
            }
            .top_card .color {
            	padding-top: 5px;
            }
            .top_card .color .colorBox{
				display: inline-flex;
            }
            .top_card .color .colorBox .colImg{
            	width: 20px;
            	height: 20px;
				margin-right: 5px;
            }
            .top_card .color .colorBox .colImg img{
            	width: 100%;
            	height: 100%;
            }
			.config ul{
				list-style: none;
				margin: 0;
				padding: 0;
				margin-top: 20px;
			}
			.config ul li{
				padding: 5px 2px;
				height: 32px;
				box-sizing: border-box;
				/*border-top: */
			}
			ul li:nth-child(even){
				background: #eee;
			}
			ul li:first-child{
				border-top: 1px solid #ddd;
			}
			ul li:last-child{
				min-height: 170px;
				display: flex;
				align-items: center;
			}
			#delete_btn{
				position: absolute;
			    top: 0px;
			    right: -5px;
			    background: #000;
			    color: #fff;
			    border-radius: 20px;
			    width: 20px;
			    height: 20px;
			    line-height: 20px;
			    text-align: center;
			}
			#delete_btn:hover{
				background: #ddd;
				box-shadow: 0px 1px 2px 2px #ababab;
			}
		</style>
		<div class="container">
			<div class="top_card">
				<div class="img">
					<img src$="{{data.seriesDefaultImageURL}}">
				</div>
				<div>
					<span class="brand">{{data.brandName}}</span>
					<span class="series">{{data.seriesName}}</span>
				</div>
				<div class="model">
					{{data.modelName}}
				</div>
				<div class="color">
					<div class="colorBox">
						<div class="colImg">
							<img src$="{{data.bodyColorUrl}}">
						</div>
						外：{{data.bodyColorName}}	
					</div>
					<div class="colorBox">
						<div class="colImg">
							<img src$="{{data.interiorColorUrl}}">
						</div>
						内：{{data.interiorColorName}}
					</div>
				</div>
				<div class="price">
					{{data.price}}
				</div>
			</div>
			<div class="config">
				<ul>
					<li>{{data.engineLayout}}</li>
					<li>{{data.fuseSource}}</li>
					<li>{{data.lengthWidthHeight}}</li>
					<li>{{data.noOfDoors}}</li>
					<li>{{data.noOfSeat}}</li>
					<li>{{data.tankCapacity}}</li>
					<li>{{data.horsePower}}</li>
					<li>{{data.gearBox}}</li>
					<li>{{data.category}}</li>
					<li>{{data.vehicleFeatures}}</li>
				</ul>
			</div>
			<div id="delete_btn" on-click="removeMe">x</div>
		</div>
		
		<!-- 获取具体车详细资料 -->
		<iron-ajax
		    id="getDetail"
		    method="POST"
		    url="{{_calURL('shop/getVehicleDetailsByUid')}}"
		    Content-Type="application/json"
		    handle-as="json"
		    on-response="_responDetail">
		</iron-ajax>
	</template>
	<script>
	   /**
	    * @customElement
	    * @polymer
	    */
	    class ltCompareCard extends ltMixin(Polymer.Element) {
	        static get is() { return 'lt-compare-card'; }
	        static get properties() {
	            return {
	                uid :{
	               		type : String,
	               		observer:"_getData"
	                },
	                data : {
	                	type : Object
	                }
	            }
	        }
	        static get observers() {
	            return [
	            ]
	        }
	        removeMe(){
	        	this.dispatchEvent(new CustomEvent('delete', {detail:{uid : this.uid} ,bubbles: true, composed: true}));
			}
	        _responDetail (e){
	        	this.data = e.detail.response[0];
	        }
	        // 获取数据
	        _getData (val){
	        	if(val){
	        		// 是否包含flag；
	        		if(val.indexOf('/') != -1){
	        			var arr = val.split('/');
	        			var id = arr[0] , flag = arr[1];
	        		}else{
	        			var id = val, flag = 0;
	        		}
	        		this.$.getDetail.body = {
	        			flag : flag,
	        		    vehicleId : id
	        		}
	        		this.$.getDetail.generateRequest();
	        	}
	        }
	    }
	    window.customElements.define(ltCompareCard.is, ltCompareCard);
	</script>
</dom-module>
