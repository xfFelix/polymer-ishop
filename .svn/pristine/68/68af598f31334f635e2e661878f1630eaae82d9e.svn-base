<link rel="import" href="../../../bower_components/polymer/polymer-element.html" />
<link rel="import" href="../elements/lt-compare-card.html">
<dom-module id="lt-compare-page">
	<template>
	<style include="lt-style">
		:host{
			display: none;
			padding: 15px 25px;
			transition: all 0.5s;
			background: #fff;
		}
		.pageContainer{
			min-height: 500px;
			position: relative;
			overflow: auto;
		}
		.header{
		    color: rgba(0,0,0,0.6);
		    width: 100%;
		    margin-bottom: 20px;
		}
		.header span:last-child{
			color :  var(--app-primary-blue);
		}
		.car_list{
			display: inline-flex;
		    flex-wrap: nowrap;
		    left: calc(250px + 1%);
		    width: calc(99% - 250px);
		    position: absolute;
    		overflow: auto;
		}
		.config_type{
			display: inline-block;
		    height: 791px;
		    /* position: absolute; */
		    width: 250px;
		    padding: 5px;
		    box-sizing: border-box;
		    border-right: 1px solid transparent;
		    box-shadow: 3px 3px 2px 2px #ddd;
		}
		.config_type ul{
			list-style: none;
			margin: 0;
			padding: 0;
			margin-top: 312px;
		}
		.config_type ul li{
			padding: 5px 2px;
			height: 32px;
			box-sizing: border-box;
		}
		ul li:nth-child(even){
			background: #eee;
		}
		ul li:first-child{
			border-top: 1px solid #ddd;
		}
		ul li:last-child{
			min-height: 170px;
			display: flex;
			align-items: center;
		}
		@media screen and (max-width:620px){
			:host{
				padding: 10px;
			}
			.config_type{
				width: 135px;
			}
			.car_list{
			    left: calc(135px + 1%);
			    width: calc(99% - 135px);
			}
		}
	</style>
	<div class="pageContainer">
		<div class="header">
		    当前位置：<span>首页</span> > <span>对比</span>
		</div>
		<div class="config_type">
			<ul>
				<li>排量</li>
				<li>油品</li>
				<li>长宽高（mm）</li>
				<li>车门</li>
				<li>座位数</li>
				<li>油箱容积</li>
				<li>发动机</li>
				<li>变速箱</li>
				<li>车型</li>
				<li>其他</li>
			</ul>
		</div>
		<div class="car_list">
			<template is="dom-repeat" items="[[idList]]">
				<lt-compare-card uid="[[item]]" on-delete="_deletedHandeler"></lt-compare-card>
			</template>
		</div>
	</div>
	</template>
	<script>
	   /**
	    * @customElement
	    * @polymer
	    */
	    class ltComparePage extends ltMixin(Polymer.Element) {
	        static get is() { return 'lt-compare-page'; }
	        static get properties() {
	            return {
	                idList : {
	                    type : Array
	                }
	            }
	        }
	        static get observers() {
	            return [
	            ]
	        }
	        // 删除
	        _deletedHandeler(e){
	        	let id = e.detail.uid;
	        	if(id){
	        		let ind = this.idList.indexOf(id)
	        		this.splice('idList',ind,1);
	        		localStorage.setItem('compareIdList',JSON.stringify(this.idList));
	        	}
	        }
	        show(){
	            this.style.display= 'block';
	            // 获取缓存
	            var compareIdList = localStorage.getItem("compareIdList");
	            this.idList = (compareIdList) ? JSON.parse(compareIdList) : [];
	        }
	        hide(){
	            this.dispatchEvent(new CustomEvent('hide',{}),false);
	            this.style.display= 'none';
	        }
	    }
	    window.customElements.define(ltComparePage.is, ltComparePage);
	</script>
</dom-module>
