<link rel="import" href="../../../bower_components/polymer/polymer-element.html" />

<dom-module id="lt-refund-wait">
	<template>
		<link rel="stylesheet" type="text/css" href="/src/lt-auto/css/refund-wait.css">
		<style>
			:host {
				display: block;
			}
		</style>
		<div class="refund">
		<div class="refund_container">
			<div class="left_icon">
				<img src="../../../images/Bitmap.jpg">
			</div>
			<div class="right_content">
				<div class="content_title">
					<p>退款申请已经传达</p>
				</div>
				<div class="content_text">
					<p>请耐心等候商户审核</p>
					<p class="text_shoper">商户：{{data.suppliersName}}</p>
				</div>
				<div class="content_button">
					<div on-click="cancelPage" class="button_ok">了解</div>
					<div class="button_link" on-click="goSchedule">查看退款进度</div>
				</div>
			</div>
		</div>
		</div>
	</template>
	
	<script>
		class ltRefundWait extends Polymer.Element{
			static get is(){return "lt-refund-wait"}
			static get properties(){
				return {
					data : Object,
				}
			}
			cancelPage(){
				this.dispatchEvent(new CustomEvent('refund-wait', {detail:{msg:"退款等待"}}));
			}
			goSchedule () {
				this.dispatchEvent(new CustomEvent('refund-schedule', {detail:{msg:"退款进度"}}));
			}
		}
		customElements.define(ltRefundWait.is,ltRefundWait)
	</script>
</dom-module>
