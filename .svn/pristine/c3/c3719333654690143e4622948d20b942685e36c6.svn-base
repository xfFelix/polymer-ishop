@function px2rem($px) {
	$rem:16px;
	@return ($px / $rem) + rem;
}
		html,body{
    		margin: 0;
    		padding: 0;
    	}
    	.refund_container{
    		width: 100%;
            height: 100%;
            background-color: #ffffff;
    		border: px2rem(1px) solid #DDDDDD;
    		display: flex;
    		flex-flow: row;
    	}
    	.left_icon{
    		display: flex;
    		width: px2rem(230px);
    		height: px2rem(239px);
    	}
    	.left_icon img{
    		margin: auto;
    		width: px2rem(95px);
    		height: px2rem(95px);
    	}
    	.left_title{
    		margin-left: px2rem(61px);
    		margin-bottom: px2rem(54px);
    		width: px2rem(94px);
    		height: px2rem(28px);
    		word-break: keep-all;
    		font-family: PingFangTC-Light sans-serif;
			font-size: px2rem(20px);
			color: #474747;
			text-align: center;
			letter-spacing: 0;
    	}
    	.right_content{
    		width: px2rem(370px);
    		height: 100%;
    	}
    	.right_content .content_title{
    		width: px2rem(253px);
    		height: auto;
    	}
    	.right_content .content_title p{
    		font-size: px2rem(18px);
    		font-family: PingFangTC-Semibold sans-serif;
    		color: #474747;
    		letter-spacing: 0;
            margin-bottom: 0;
    	}
    	.right_content .content_text{
    		min-height: px2rem(20px);
    		height: auto;
    		overflow: hidden;
    		text-overflow: ellipsis;
    	}
    	.right_content .content_text p{
    		font-family: PingFangTC-Light sans-serif;
			font-size: px2rem(14px);
			color: #F9A619;
			letter-spacing: 0;
    	}
        .right_content .content_text .text_shoper{
            font-family: PingFangTC-Light;
            font-size: px2rem(12px);
            color: #9B9B9B;
            letter-spacing: 0;
        }
        .right_content .content_text .text_long{
            background-color: #F5F5F5;
            height: auto;
            min-height: px2rem(50px);
            width: px2rem(345px);
            font-family: PingFangTC-Light sans-serif;
            font-size: 12px;
            color: #9B9B9B;
            letter-spacing: 0;
        }
    	.right_content .content_button{
    		width: px2rem(370px);
    		height: px2rem(50px);
            display: flex;
            flex-flow: row;
    	}
    	.right_content .content_button .button_ok{
            margin-top: px2rem(10px);
    		width: px2rem(145px);
            height: px2rem(40px);
            font-family: PingFangTC-Medium;
            font-size: px2rem(16px);
            color: #9B9B9B;
            letter-spacing: 0;
            background-color: #F5F5F5;
            line-height: px2rem(40px);
            text-align: center;
    	}
        .right_content .content_button .button_link{
            margin-top: px2rem(10px);
            margin-left: px2rem(55px);
            width: px2rem(145px);
            height: px2rem(40px);
            font-family: PingFangTC-Medium;
            font-size: px2rem(16px);
            color: #FFFFFF;
            letter-spacing: 0;
            background-color: #EC3437;
            line-height: px2rem(40px);
            text-align: center;
        }
        @media screen and (min-width: 360px) and (max-width: 615px){
            .left_icon{
                width: px2rem(180px);
            }
            .refund_container{
                height: px2rem(330px);
            }
            .right_content .content_title p{
                margin-bottom: 0;
            }
            .right_content .content_button{
                margin-bottom: px2rem(20px);
            }
            .right_content .content_button .button_link{
                margin-left: px2rem(20px);
                width: px2rem(180px);
            }
        }