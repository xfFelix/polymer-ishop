<link rel="import" href="../../../bower_components/polymer/polymer-element.html" />

<dom-module id="lt-product-card">
	<template>
		<style>
			:host {
				display: block;
				width: 32%;
				margin-top: 10px;
				margin-right: 1%;

			}
			.container{
				width: 100%;
				border:1px solid #ddd;
			}
			.imgBox{
				border-bottom:3px solid #F7A51A;
				background-color: #fff;
				padding:5%;
			}
			.imgBox img{
				width: 100%;
				height:54%;
			}
			.bottomBox{
					box-sizing: border-box;
					padding: 10px 5px;
					background: #fff;
					/*height: 70px;*/
					display: flex;
					justify-content: space-between;
					align-items: center;
					nowrap
			}
			.bottomBox .vehicleText{
				font-size: 16px;
			}
			.price{
                font-size: 24px;
                color: red;
								white-space: nowrap;
            }
			.price::before{
                content: "ï¿¥";
                font-size: 12px;
                color:#4A4A4A;
            }
            @media screen and (max-width:620px){
            	:host{
            		width: 98%;
								margin:10px auto;
            	}
            }

						@media screen and (max-width:1079px) and (min-width:621px){
								:host{
									width: 48%;
									margin: 1% ;
								}
							}
		</style>
		<div class="container">
			<div class="imgBox">
				<!-- <img src$="{{data.seriesDefaultImageURL}}"> -->
				<img src="{{data.productDefaultImgUrl}}">
			</div>
			<div class="bottomBox">
				<div class="vehicleText">
					{{data.productName}}
				</div>
				<div class="price">
					{{data.stringTypePrice}}
				</div>
			</div>
		</div>

	</template>
	<script>
		class ltProductCard extends Polymer.Element{
			static get is(){return "lt-product-card"}
			static get properties(){
				return {
					data : {
						type : Object
					}
				}
			}

		}
		customElements.define(ltProductCard.is,ltProductCard)
	</script>
</dom-module>
