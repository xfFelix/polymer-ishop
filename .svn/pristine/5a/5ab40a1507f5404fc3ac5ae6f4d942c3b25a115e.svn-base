@function px2rem($px) {
	$rem:16px;
	@return ($px / $rem) + rem;
}
		html,body{
    		margin: 0;
    		padding: 0;
    	}
    	.refund_container{
    		width: 100%;
            height: 100%;
            background-color: #ffffff;
            border: px2rem(1px) solid #DDDDDD;
            display: flex;
            flex-flow: row;
    	}
    	.left_icon{
    		display: flex;
    		width: px2rem(230px);
            height: px2rem(239px);
    	}
    	.left_icon img{
    		margin: auto;
    		width: px2rem(95px);
    		height: px2rem(95px);
    	}
    	.left_title{
    		margin-left: px2rem(61px);
    		margin-bottom: px2rem(54px);
    		width: px2rem(94px);
    		height: px2rem(28px);
    		word-break: keep-all;
    		font-family: PingFangTC-Light sans-serif;
			font-size: px2rem(20px);
			color: #474747;
			text-align: center;
			letter-spacing: 0;
    	}
    	.right_content{
    		width: px2rem(370px);
    		height: auto;
    	}
    	.right_content .content_title{
    		width: px2rem(253px);
    		height: px2rem(25px);
    	}
    	.right_content .content_title p{
    		font-size: px2rem(18px);
    		font-family: PingFangTC-Semibold sans-serif;
    		color: #474747;
    		letter-spacing: 0;
    	}
    	.right_content .content_text{
    		min-height: px2rem(20px);
    		max-height: px2rem(110px);
    		overflow: hidden;
    		text-overflow: ellipsis;
    	}
    	.right_content .content_text p{
    		font-family: PingFangTC-Light sans-serif;
			font-size: px2rem(14px);
			color: #F9A619;
			letter-spacing: 0;
    	}
        .right_content .content_text .text_shoper{
            font-family: PingFangTC-Light;
            font-size: px2rem(12px);
            color: #9B9B9B;
            letter-spacing: 0;
        }
    	.right_content .content_button{
    		width: px2rem(145px);
    		height: px2rem(40px);
    		background-color: #ecdfde;
    		position: absolute;
    		bottom: px2rem(20px);
            display: flex;
    	}
    	.right_content .content_button div{
            margin: auto;
    		width: px2rem(103.8px);
    		height: px2rem(22px);
    		font-family: PingFangTC-Medium sans-serif;
			font-size: px2rem(16px);
			color: #9B9B9B;
			letter-spacing: 0;
            line-height: px2rem(22px);
			word-break: keep-all;
            text-align: center;
    	}
        @media screen and (min-width: 360px) and (max-width: 610px) {
            .left_icon{
                width: px2rem(180px);
            }
            .right_content{
                width: auto;
            }
            .right_content .content_title p{
                margin-bottom: 0;
            }
            .refund_container{
                height: px2rem(250px);
            }
        }