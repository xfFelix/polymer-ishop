<link rel="import" href="../../../bower_components/polymer/polymer-element.html" />
<dom-module id="lt-model-card">
	<template>
		<style>
			:host {
				display: block;
				width: 32%;
				margin-top: 10px;
				margin-right: 1%;

			}
			.container{
				width: 100%;
				border:1px solid #ddd;
			}
			.imgBox{
				border-bottom:3px solid #F7A51A;
				padding:5%;
				position: relative;
				min-height: 220px;
				box-sizing: border-box;
			}
			.imgBox img{
				width: 100%;
				height:54%;
			}
			.bottomBox{
				box-sizing: border-box;
			    padding: 10px;
			    background: #fff;
			}
			.bottomBox .vehicleText{
				display: flex;
				justify-content: space-between;
				align-items: center;
				border-bottom: 1px solid #ddd;
				padding-bottom: 10px;
				min-height: 42px;
			}
			.vehicleText .name .brand{
				padding-right: 8px;
			}
			.vehicleText .name .series{
				border-left: 2px solid #dedede;
				padding-left : 8px;
			}
			.vehicleText .version{
				color: #fff;
				background: #ffa825;
				padding: 5px;
			}
			.price{
                font-size: 30px;
                color: red;
            }
			.price::before{
                content: "￥";
                font-size: 14px;
                color:#4A4A4A;
            }
            .price::after{
                content: "万";
                font-size: 14px;
                color:#4A4A4A;
            }

            .dec{
            	display: flex;
            	justify-content: space-between;
            	align-items: center;
            	padding-top: 10px;
            }
            .dec .color {
            	padding-top: 5px;
            }
            .dec .color .colorBox{
							display: inline-flex;
							font-size:15px;
							color:#999;
							margin-right:3px;
            }
            .dec .color .colorBox .colImg{
            	width: 20px;
            	height: 20px;
							/*background: #000;*/
							margin-right: 5px;
            }
            .dec .color .colorBox .colImg img{
            	width: 100%;
            	height: 100%;
            }

			.imgBox .status_text{
				width: 50px;
				height: 50px;
				text-align: center;
				font-size:14px;
				position: absolute;
				top: 8px;
				left: 11px;
				transform: rotate(-45deg);
				color: #fff;
			}
			.imgBox .status_text::after{
				content: "";
			    border-left: 10px solid transparent;
			    border-right: 10px solid transparent;
			    border-bottom: 10px solid rgba(20, 20, 20, 0.3);
			    position: absolute;
			    transform: scale(5);
			    top: -4px;
			    left: 13px;
			    z-index: -1;
			}
			@media screen and (max-width:620px){
				:host{
					width: 100%;
					margin:10px auto;
				}
			}

			@media screen and (max-width:1079px) and (min-width:621px){
					:host{
						width: 48%;
						margin: 1% ;
					}
				}
		</style>
		<div class="container">
			<div class="imgBox" style="background: url(../../../images/default_bg.jpg);">
				<img src$="{{data.seriesDefaultImageURL}}">
				<!-- <img src="../../../images/default.png"> -->
				<template is="dom-if" if="{{_checkflag(data.flag,3)}}" restamp>
					<div class="status_text">
						已售
					</div>
				</template>
				<template is="dom-if" if="{{_checkflag(data.flag,1,2)}}" restamp>
					<div class="status_text">
						已预订
					</div>
				</template>
			</div>
			<div class="bottomBox">
				<div class="vehicleText">
					<div class="name">
						<span class="brand">{{data.brandName}}</span>
						<span class="series">{{data.modelName}}</span>
					</div>
					<!-- <div class="version"> -->
						<!-- 中东版 -->
					<!-- </div> -->
				</div>
				<div class="dec">
					<div class="color">
						<div class="colorBox">
							<div class="colImg">
								<img src="{{data.bodyColorUrl}}">
							</div>
							外：{{data.bodyColorName}}
						</div>
						<div class="colorBox">
							<div class="colImg">
								<img src="{{data.interiorColorUrl}}">
							</div>
							内：{{data.interiorColorName}}
						</div>
					</div>
					<div class="price">
						{{data.stringTypePrice}}
					</div>
				</div>
			</div>
		</div>

	</template>
	<script>
		class ltModelCard extends Polymer.Element{
			static get is(){return "lt-model-card"}
			static get properties(){
				return {
					data : {
						type : Object
					}
				}
			}
			_checkflag(flag,val1,val2){
				if(!flag){
					return false
				}
				if(flag == val1){
					return true
				}
				if(flag == val2){
					return true
				}
				return false
			}

		}
		customElements.define(ltModelCard.is,ltModelCard)
	</script>
</dom-module>
