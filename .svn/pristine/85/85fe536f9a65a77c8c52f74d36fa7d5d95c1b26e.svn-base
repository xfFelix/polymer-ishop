html, body {
  margin: 0;
  padding: 0; }

.refund_container {
  width: 100%;
  height: 100%;
  border: 0.0625rem solid #DDDDDD;
  display: flex;
  flex-flow: row; }

.left_icon {
  display: flex;
  flex-flow: column;
  width: 14.375rem;
  height: 14.9375rem; }

.left_icon img {
  margin: auto;
  width: 8.6875rem;
  height: 7.625rem; }

.left_title {
  margin-left: 3.8125rem;
  margin-bottom: 3.375rem;
  width: 5.875rem;
  height: 1.75rem;
  word-break: keep-all;
  font-family: PingFangTC-Light sans-serif;
  font-size: 1.25rem;
  color: #474747;
  text-align: center;
  letter-spacing: 0; }

.right_content {
  width: 23.125rem;
  height: 14.9375rem; }

.right_content .content_title {
  width: 15.8125rem;
  height: 1.5625rem; }

.right_content .content_title p {
  font-size: 1.125rem;
  font-family: PingFangTC-Semibold sans-serif;
  color: #474747;
  letter-spacing: 0; }

.right_content .content_text {
  min-height: 1.25rem;
  max-height: 6.875rem;
  overflow: hidden;
  text-overflow: ellipsis; }

.right_content .content_text p {
  font-family: PingFangTC-Light sans-serif;
  font-size: 0.875rem;
  color: #F9A619;
  letter-spacing: 0; }

.right_content .content_text .text_shoper {
  font-family: PingFangTC-Light;
  font-size: 0.75rem;
  color: #9B9B9B;
  letter-spacing: 0; }

.right_content .content_button {
  width: 9.0625rem;
  height: 2.5rem;
  background-color: #ecdfde;
  position: absolute;
  bottom: 1.25rem;
  display: flex; }

.right_content .content_button div {
  margin: auto;
  width: 6.4875rem;
  height: 1.375rem;
  font-family: PingFangTC-Medium sans-serif;
  font-size: 1rem;
  color: #9B9B9B;
  letter-spacing: 0;
  word-break: keep-all;
  text-align: center;
  line-height: 1.375rem; }

@media screen and (min-width: 310px) and (max-width: 610px) {
  .refund_container {
    height: 15.625rem; } }

